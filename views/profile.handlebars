<div class="section">
  <div class="container">
    <div class="content">
      <h1 class="title profile-title">{{ title }}</h1>
    </div>

    <!-- start of owner section -->
    <div class="content">
      <div class="card">
        <div class="card-content">
          <h2 class="subtitle">Your Info</h2>
          <h2 class="subtitle">{{ name }}</h2>
          <div class="columns">
            <!-- pic column -->
            <div class="column is-narrow center-column">
              <figure class="image is-128x128">
                <img id="profile-image" src="https://bulma.io/images/placeholders/128x128.png">
              </figure>

              <button class="button upload-button" data-upload-target-type="user">Update</button>
            </div>

            <!-- name column -->
            <div class="column">
              <form>
                <div class="field is-horizontal">
                  <div class="field-body">
                    <div class="field">
                      <div class="control" id="nameControl"></div>
                    </div>
                    <div class="field">
                      <div class="control">
                        <button class="button" id="nameBtn">
                          Update Public Name
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="control">
                  <div class="dropdown">
                    <div class="dropdown-trigger">
                      <button class="button" aria-haspopup="true" aria-controls="dropdown-menu2">
                        <span>Your Events</span>
                        <span class="icon is-small">
                          <i class="fas fa-angle-down" aria-hidden="true"></i>
                        </span>
                      </button>
                    </div>
                    <div class="dropdown-menu" id="dropdown-menu2" role="menu">
                      <div class="dropdown-content" id="userEventsDropdown">
                        {{!-- dropdown goes here --}}
                      </div>
                    </div>
                  </div>
                </div>
              </form>
            </div> {{!-- end of  column--}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


